s = 0.5
x = 0.1
define :panup do | a|
  play 43, amp: a, pan:1
  sleep s
  play 43, amp: a, pan:-1
  sleep s
end
live_loop :UPSANDDOWN do
  3.times do
    10.times do
      panup x
      x = x + 0.1
    end
    x = 0
  end
  stop
end
