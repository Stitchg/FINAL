define :main_bowl do |b1, b2, x1, x2,|
  play :a3, sustain:100, amp: 1.35
  play b1, sustain:100, amp: 1.35
  play b2, sustain:100, amp: 1.35
  
  play x1
  sleep 0.5
  play :d4
  sleep 0.25
  play :d4
  sleep 0.25
  play :d4
  sleep 0.5
  play :d4
  sleep 0.25
  play :d4
  sleep 0.25
  play :d4
  sleep 0.25
  play :d4
  sleep 0.25
  play :a3
  sleep 1
  play x2
  sleep 0.5
end
